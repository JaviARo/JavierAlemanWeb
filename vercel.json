{
  "version": 2,

  "builds": [

    {"src": "/api/**", "use": "vercel-php@0.6.0" },

    {"src": "/public/**", "use": "@vercel/static" }

  ],
  
  "routes": [

    {

      "src": "/(css|js)/(.*)",

      "dest": "public/$1/$2"

    },

    {

      "src": "/php/(.*)",

      "dest": "api/$1"

    },

    {

      "src": "/img/(.*)",

      "dest": "public/img/$1"

    },

    {

      "src": "/pdf/(.*)",

      "dest": "public/pdf/$1"

    },

    {

      "src": "/(.*)",

      "dest": "/api/index.php"

    }
  ]
}